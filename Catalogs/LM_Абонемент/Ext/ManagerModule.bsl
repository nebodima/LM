	СтандартнаяОбработка = Ложь;
	
	Код = Данные.Код;
	Пока Лев(Код, 1) = "0" Цикл 
		Код = Прав(Код, СтрДлина(Код) - 1);
	КонецЦикла;

	Представление = Данные.Ссылка.Наименование +" № " +Код+ ?(Данные.Ссылка.ФизЛицо.Пустая(),""," (" +Данные.Ссылка.ФизЛицо+ ")");
	
КонецПроцедуры
